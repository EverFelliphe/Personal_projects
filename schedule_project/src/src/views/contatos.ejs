<%- include('./includes/head');%>
<%- include('./includes/nav');%>
    <div class="container">
      <div class="row">
        <div class="col-lg-2"> </div>
        <div class="col-lg-8 my-2"> 
          <h1 class=" text-center fw-bold">Contato</h1>
          <p class="text-center lead fw-bold ">crie ou edite os seus contatos abaixo</p>
         <%- include('./includes/messages') %> 
         <% if (contato._id){%>
          <form action="/contatos/edit/<%=contato._id %>" method="POST">
        <%} else {%>
          <form action="/contatos/register" method="POST">
          <%}%>
         
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="mb-3">
            <label for="nome" class="form-label">Nome</label>
            <input value='<%=contato.nome %>' type="text" class="form-control"  aria-describedby="emailHelp" name="nome">
          </div>
          <div class="mb-3">
            <label for="sobrenome" class="form-label">Sobrenome</label>
            <input value='<%=contato.sobrenome %>' type="text" class="form-control"  aria-describedby="emailHelp" name="sobrenome">
          </div>
          <div class="mb-3">
            <label for="email" class="form-label">email</label>
            <input value='<%= contato.email %>' type="email" class="form-control"  aria-describedby="emailHelp" name="email">
          </div>
          <div class="mb-3">
            <label for="telefone" class="form-label">Telefone</label>
            <input value= '<%= contato.telefone %>' type="tel" class="form-control"  aria-describedby="emailHelp" name="telefone">
          </div>
          <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        </div>
        <div class="col-lg-2"> </div>
      </div>
    </div>
<%- include('./includes/footer');%>
